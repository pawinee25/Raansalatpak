<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".RegisterActivity">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="กรุณากรอกข้อมูลส่วนตัวของท่านลงในช่องว่างเพื่อสมัครสมาชิก"
      android:textSize="25dp"
      android:textColor="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

<!--            <ImageView-->
<!--                android:id="@+id/image_profile"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="150dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginBottom="20dp"-->
<!--                android:src="@drawable/ic_launcher_background" />-->

            <EditText
                android:id="@+id/edt_name"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="ชื่อ" />

            <EditText
                android:id="@+id/edt_surname"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="นามสกุล" />

            <EditText
                android:id="@+id/edt_username"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ชื่อผู้ใช้" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/edt_password"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="รหัสผ่าน" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/edt_repassword"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ยืนยันรหัสผ่าน" />

            <EditText
                android:id="@+id/edt_dateofbirth"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="วัน/เดือน/ปีเกิด" />


            <EditText
                android:id="@+id/edt_gender"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="เพศ"/>

            <EditText
                android:id="@+id/edt_tel"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="เบอร์โทรศัพท์" />

            <EditText
                android:id="@+id/edt_email"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="อีเมล" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/bt_confirm"
                    android:text="ยืนยัน"
                    android:layout_width="150dp"
                    android:textSize="25dp"
                    android:layout_height="60dp"
                    android:background="#C9FD94"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/bt_cancel"
                    android:text="ยกเลิก"
                    android:background="@color/design_default_color_error"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_width="150dp"
                    android:layout_height="60dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>